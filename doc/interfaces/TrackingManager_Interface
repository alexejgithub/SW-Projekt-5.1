Interface TrackingManager {
   //get the current location of the device
   public Location p getCurrentPosition() {
      ensures iff lockCustomPos
         p == customPos;
      else
         p == currentPosition;
   }

   //set a custom location to overwrite real device location
   //(for testing purposes)
   public void setCustomPosition(Location newCustomPos) {
      ensures customPos == newCustomPos;
      ensures lockCustomPos == true;
   }

   //clear location overwrite
   public void clearCustomPosition() {
      ensures lockCustomPos == false;
   }
}
